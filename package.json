{
  "name": "lspeasy",
  "version": "1.0.0",
  "private": true,
  "description": "TypeScript SDK for building Language Server Protocol clients and servers",
  "keywords": [
    "lsp",
    "language-server-protocol",
    "typescript",
    "sdk",
    "language-server",
    "lsp-client",
    "lsp-server"
  ],
  "homepage": "https://github.com/pradeepmouli/lspeasy#readme",
  "bugs": {
    "url": "https://github.com/pradeepmouli/lspeasy/issues"
  },
  "license": "MIT",
  "author": "Pradeep Mouli",
  "repository": {
    "type": "git",
    "url": "https://github.com/pradeepmouli/lspeasy.git"
  },
  "workspaces": [
    "packages/*",
    "packages/*/*"
  ],
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "vitest run e2e",
    "test:unit": "vitest run packages",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "type-check": "pnpm -r run type-check",
    "typecheck:watch": "pnpm -r --parallel run type-check -- --watch",
    "clean": "pnpm -r run clean && rm -rf node_modules/.cache",
    "clean:all": "pnpm -r exec rm -rf dist node_modules && rm -rf node_modules",
    "fresh": "pnpm clean:all && pnpm install",
    "dev": "pnpm -r --parallel run dev",
    "audit": "pnpm audit --audit-level moderate",
    "outdated": "pnpm outdated -r",
    "update:deps": "pnpm update -r --latest",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm run build && changeset publish",
    "generate:protocol": "tsx scripts/generate-protocol-types.ts && oxfmt packages/core/src/protocol/*.ts",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@types/node": "^25.2.0",
    "@typescript/native-preview": "7.0.0-dev.20260208.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "camelcase": "^9.0.0",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "simple-git-hooks": "^2.13.1",
    "size-limit": "^12.0.0",
    "ts-morph": "^27.0.2",
    "tsx": "^4.21.0",
    "type-fest": "^5.4.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "oxfmt . --no-error-on-unmatched-pattern"
    ],
    "*.{ts,tsx,js,jsx}": [
      "oxlint --fix"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.27.0"
}
