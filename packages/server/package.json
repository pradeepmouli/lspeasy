{
  "name": "@lspeasy/server",
  "version": "2.0.1",
  "description": "Build LSP servers with simple, typed API",
  "keywords": [
    "lsp",
    "language-server-protocol",
    "lsp-server",
    "language-server"
  ],
  "homepage": "https://github.com/pradeepmouli/lspeasy#readme",
  "bugs": {
    "url": "https://github.com/pradeepmouli/lspeasy/issues"
  },
  "license": "MIT",
  "author": "Pradeep Mouli",
  "repository": {
    "type": "git",
    "url": "https://github.com/pradeepmouli/lspeasy.git",
    "directory": "packages/server"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsgo --build",
    "clean": "rm -rf dist *.tsbuildinfo",
    "dev": "tsgo --build --watch",
    "type-check": "tsgo --noEmit"
  },
  "dependencies": {
    "@lspeasy/core": "workspace:*"
  },
  "optionalDependencies": {
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "vscode-languageserver-protocol": "^3.17.5",
    "zod": "^4.3.6"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
